<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>get-noun</servlet-name>
		<servlet-class>es.fergonco.deutsch.GetNoun</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>get-noun</servlet-name>
		<url-pattern>/get-noun</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>get-word</servlet-name>
		<servlet-class>es.fergonco.deutsch.GetWord</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>get-word</servlet-name>
		<url-pattern>/get-word</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>update-gender-ratio</servlet-name>
		<servlet-class>es.fergonco.deutsch.UpdateGenderRatio</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update-gender-ratio</servlet-name>
		<url-pattern>/update-gender-ratio</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>update-in-german-ratio</servlet-name>
		<servlet-class>es.fergonco.deutsch.UpdateInGermanRatio</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update-in-german-ratio</servlet-name>
		<url-pattern>/update-in-german-ratio</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>update-word</servlet-name>
		<servlet-class>es.fergonco.deutsch.UpdateWord</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update-word</servlet-name>
		<url-pattern>/update-word</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>add-words</servlet-name>
		<servlet-class>es.fergonco.deutsch.AddWords</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>add-words</servlet-name>
		<url-pattern>/add-words</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>error-servlet</servlet-name>
		<servlet-class>es.fergonco.deutsch.ErrorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>error-servlet</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error</location>
	</error-page>

</web-app>
